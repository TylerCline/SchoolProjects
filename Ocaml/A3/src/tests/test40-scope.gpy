def f(x:int, y:bool) : int {   // -+ x and y go into scope
  let z = ref x;               // -+ z goes into scope
  {                            //  |
    let w = !z;                // ---+ w goes into scope
    z := w + 1                 //  | |
  };                           // ---+ w goes out of scope
  !z + 1                       //  |
}                              // -+ x,y, and z go out of scope
f(3, false)
